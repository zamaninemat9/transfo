<%- include('../header3')-%>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>افزودن بنر</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <%if(d){%>
                    <div class="alert alert-success">
                        با موفقیت افزوده شد
                    </div>
                    <%}%>
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
<!--                            <h3 class="card-title">مثال ساده</h3>-->
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form role="form" enctype="multipart/form-data" method="post" action="/admin/banner/add" >
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="img">تصویر </label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file"  class="custom-file-input" id="img" name="img">
                                            <label class="custom-file-label" for="img">انتخاب فایل</label>
                                        </div>
                                        <small style="color: red;"> سایز تصویر باید 778*250 باشد</small>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="type">نوع </label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <select class="form-control" id="type" name="type">
                                                <option value="1">دریک نگاه</option>
                                                <option value="2">پیام مدیرعامل</option>
                                                <option value="3">چارت سازمانی</option>
                                                <option value="5">تماس با ما</option>
                                                <option value="6">اخبار</option>
                                                <option value="7">اطلاعیه ها</option>
                                                <option value="8">چند رسانه ای</option>
                                                <option value="9">مناقصه و مزایده</option>
                                                <option value="10">همکاری با ما</option>
                                                <option value="11">ارتباط با واحد سهام</option>
                                                <option value="12">محصولات</option>
                                                <option value="13">گزارشات</option>
                                                <option value="14">استخدام</option>
                                                <option value="15">کاتالوگ</option>
                                                <option value="16">سیاست های راهبردی</option>
                                                <option value="17">امور مشتریان</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">ارسال</button>
                            </div>
                        </form>
                    </div>

                    <!-- Form Element sizes -->

                </div>
                <!--/.col (left) -->
                <!-- right column -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
