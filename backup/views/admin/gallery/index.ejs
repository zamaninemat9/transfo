<%- include('../header2') -%>
<style>
    td, th {
        text-align: center;
    }
</style>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>جدول گالری تصاویر</h1>
                </div>

            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <a href="/admin/gallery/add" class="btn btn-primary">افزودن تصویر</a>
                        </h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>ردیف</th>
                                <th>تصویر</th>
                                <th>تاریخ انتشار</th>
                                <th>عملیات</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if(data){ %>
                                <%let num=1%>
                            <% for (let i in data){ %>
                            <tr id="tr_<%= data[i].data._id %>">
                                <td><%= num %></td>
                                <%num++%>
                                <td><img width="50" height="50" src="<%=uRoute%>/<%= data[i].data.img %>" alt=""></td>
                                <td><%= data[i].n_d %></td>
                                <td>
                                    <a href="#" onclick="delete_id('<%= data[i].data._id %>')">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            <% } %>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.0/axios.min.js"></script>
<%- include('../footer2') -%>
<script>
    $(function () {
        $("#example1").DataTable({
            "language": {
                "paginate": {
                    "next": "بعدی",
                    "previous": "قبلی"
                },
                search: "جستجو : ",
            },
            "info": false,
        });

    });
</script>
<script>
    function delete_id(id) {
        axios.delete('/admin/gallery/remove/' + id)
            .then(r => {
                if(r.data.issuccessful){
                    $("#tr_"+id).remove();
                }
            });
    }
</script>
