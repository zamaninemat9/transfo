<%- include('../header2') -%>
<style>
    td, th {
        text-align: center;
    }
</style>
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>شبکه های اجتماعی</h1>
                </div>
            </div>
        </div>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>ردیف</th>
                                <th>نام شبکه اجتماعی</th>
                                <th>لینک </th>
                                <th>وضعیت</th>
                                <th>عملیات</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if(data){ %>
                                <% let num=1%>
                                <% for (let i in data){ %>
                                    <tr id="tr_<%= data[i]._id %>">
                                        <td><%= num %></td>
                                        <td><%= data[i].socialName %></td>
                                        <td><%= data[i].socialLink %></td>
                                        <td><%if(data[i].status){%>
                                                فعال
                                            <%}else{%>
                                                غیر فعال
                                            <%}%>
                                        </td>
                                        <td>
                                            <a href="#" onclick="status_id('<%= data[i]._id %>')">
                                                <i class="fa fa-exchange" title="تغییر وضعیت"></i>
                                            </a>
                                            <a href="/admin/social/<%= data[i]._id %>">
                                                <i class="fa fa-pencil" title="ویرایش"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% num++%>
                                <% } %>

                            <% } %>
                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.0/axios.min.js"></script>
<%- include('../footer2') -%>
<script>
    $(function () {
        $("#example1").DataTable({
            "language": {
                "paginate": {
                    "next": "بعدی",
                    "previous": "قبلی"
                },
                search: "جستجو : ",
            },
            "info": false,
        });

    });
</script>
<script>
    function status_id(id) {
        axios.put('/admin/social/change_st_' + id)
            .then(r => {
                if(r.data.issuccessful){
                    window.location.href='/admin/social'
                }
            });
    }
</script>
