<%- include('../header3') -%>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>ویرایش اطلاعیه</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <% if(s){ %>
                        <div class="alert alert-success">
                            با موفقیت ویرایش شد
                        </div>
                    <% } %>
                    <div class="card card-primary">
                        <div class="card-header">
                            <!--                            <h3 class="card-title">مثال ساده</h3>-->
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form role="form" method="post"
                              action="/admin/users/edit_<%= d._id %>">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="news_title">نام کاربری</label>
                                    <input type="text" value="<%= d.username %>" class="form-control" id="news_title"
                                           name="username">
                                </div>

                                <div class="form-group">
                                    <label for="perm">دسترسی ها</label>
                                    <select class="form-control" multiple id="perm" name="perm">
                                        <option <%if(d.perm.indexOf("2")!=='-1'){%> selected <%}%> value="2">اخبار ، اطلاعیه ها</option>
                                        <option  <%if(d.perm.indexOf("3")!=='-1'){%> selected <%}%> value="3">شبکه های اجتماعی</option>
                                        <option <%if(d.perm.indexOf("4")!=='-1'){%> selected <%}%> value="4">محصولات</option>
                                        <option <%if(d.perm.indexOf("5")!=='-1'){%> selected <%}%> value="5">اسلایدر محصولات</option>
                                        <option <%if(d.perm.indexOf("6")!=='-1'){%> selected <%}%> value="6"> تماس با ما</option>
                                        <option <%if(d.perm.indexOf("7")!=='-1'){%> selected <%}%> value="7">crm</option>
                                        <option <%if(d.perm.indexOf("8")!=='-1'){%> selected <%}%> value="8">مناقصه و مزایده</option>
                                        <option <%if(d.perm.indexOf("9")!=='-1'){%> selected <%}%> value="9">اسلایدر اصلی</option>
                                        <option <%if(d.perm.indexOf("10")!=='-1'){%> selected <%}%> value="10">لینک های سریع</option>
                                        <option <%if(d.perm.indexOf("11")!=='-1'){%> selected <%}%> value="11">خدمات پس از فروش</option>
                                        <option <%if(d.perm.indexOf("12")!=='-1'){%> selected <%}%> value="12">گالری تصاویر</option>
                                        <option <%if(d.perm.indexOf("13")!=='-1'){%> selected <%}%> value="13">چند رسانه ای</option>
                                        <option <%if(d.perm.indexOf("14")!=='-1'){%> selected <%}%> value="14">کاتالوگ</option>
                                        <option <%if(d.perm.indexOf("15")!=='-1'){%> selected <%}%> value="15">تاریخچه</option>
                                        <option <%if(d.perm.indexOf("16")!=='-1'){%> selected <%}%> value="16">چارت سازمانی</option>
                                        <option <%if(d.perm.indexOf("17")!=='-1'){%> selected <%}%> value="17">همکاری با ما</option>
                                        <option <%if(d.perm.indexOf("20")!=='-1'){%> selected <%}%> value="20">فرصت های شغلی</option>
                                    </select>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">ارسال</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                    <!-- Form Element sizes -->
                </div>
                <!--/.col (left) -->
                <!-- right column -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    $("#perm").select2()
</script>
<%- include('../footer3') -%>
