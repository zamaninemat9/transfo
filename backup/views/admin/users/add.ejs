<%- include('../header3')-%>
<link href="admin/dist/css/select2.min.css" rel="stylesheet" />

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>افزودن کاربر</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <%if(d){%>
                    <div class="alert alert-success">
                        با موفقیت افزوده شد
                    </div>
                    <%}%>
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
<!--                            <h3 class="card-title">مثال ساده</h3>-->
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form role="form" method="post" action="/admin/users/add" >
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="username">نام کاربری</label>
                                    <input type="text" class="form-control" id="username" name="username">
                                </div>
                                <div class="form-group">
                                    <label for="password">رمز عبور انتخابی</label>
                                    <input type="text" class="form-control" id="password" name="password" >
                                </div>
                                <div class="form-group">
                                    <label for="perm">دسترسی ها</label>
                                    <select class="form-control" multiple id="perm" name="perm">
                                        <option value="2">اخبار ، اطلاعیه ها</option>
                                        <option value="3">شبکه های اجتماعی</option>
                                        <option value="4">محصولات</option>
                                        <option value="5">اسلایدر محصولات</option>
                                        <option value="6"> تماس با ما</option>
                                        <option value="7">crm</option>
                                        <option value="8">مناقصه و مزایده</option>
                                        <option value="9">اسلایدر اصلی</option>
                                        <option value="10">لینک های سریع</option>
                                        <option value="11">خدمات پس از فروش</option>
                                        <option value="12">گالری تصاویر</option>
                                        <option value="13">چند رسانه ای</option>
                                        <option value="14">کاتالوگ</option>
                                        <option value="15">تاریخچه</option>
                                        <option value="16">چارت سازمانی</option>
                                        <option value="20">فرصت های شغلی</option>
                                        <option value="17">
										همکاری با ما
										</option>
                                    </select>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">ارسال</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->

                    <!-- Form Element sizes -->

                </div>
                <!--/.col (left) -->
                <!-- right column -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<script src="admin/dist/js/jquery-3.5.1.min.js"></script>
<script src="admin/dist/js/select2.min.js"></script>
<script>
    $("#perm").select2()
</script>
