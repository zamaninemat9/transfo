<%- include('../header3') -%>
<link href="admin/dist/css/select2.min.css" rel="stylesheet" />

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>تغییر رمز عبور</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <% if(d){ %>
                        <div class="alert alert-success">
                            با موفقیت افزوده شد
                        </div>
                    <% } %>
                        <%if(st){%>
                        <div class="alert alert-danger">
                            <%=st%>
                        </div>
                        <%}%>
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <!--                            <h3 class="card-title">مثال ساده</h3>-->
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form role="form" method="post" action="/admin/users/change_password_<%= id %>">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="password">رمز عبور فعلی</label>
                                    <input type="password" class="form-control" id="password" name="password">
                                </div>
                                <div class="form-group">
                                    <label for="newpassword">رمز عبور جدید</label>
                                    <input type="password" class="form-control" id="newpassword" name="newpassword">
                                </div>
                                <div class="form-group">
                                    <label for="confirmpassword">تکرار رمز عبور جدید</label>
                                    <input type="password" class="form-control" id="confirmpassword"
                                           name="confirmpassword">
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">ارسال</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->

                    <!-- Form Element sizes -->

                </div>
                <!--/.col (left) -->
                <!-- right column -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<script src="admin/dist/js/jquery-3.5.1.min.js"></script>
<script src="admin/dist/js/select2.min.js"></script>

<%- include('../footer3') -%>
