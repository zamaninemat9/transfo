<%- include('../header2') -%>
<style>
    td, th {
        text-align: center;
    }
</style>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>جدول ساختار سازمانی</h1>
                </div>

            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <!--<a href="/admin/gallery/add" class="btn btn-primary">افزودن تصویر</a>-->
                        </h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>ردیف</th>
                                <th>تصویر</th>
                                <th>عملیات</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if(data){ %>
                            <% for (let i in data){ %>
                            <tr id="tr_<%= data[i]._id %>">
                                <td>1</td>
                                <td><img width="50" height="50" src="<%=uRoute%>/<%= data[i].img %>" alt=""></td>
                                <td>
                                    <a href="/admin/chart/<%= data[i]._id %>">
                                        <i class="fa fa-pencil"></i>
                                    </a>

                                </td>
                            </tr>
                            <% } %>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.0/axios.min.js"></script>
<%- include('../footer2') -%>
<script>
    $(function () {
        $("#example1").DataTable({
            "language": {
                "paginate": {
                    "next": "بعدی",
                    "previous": "قبلی"
                },
                search: "جستجو : ",
            },
            "info": false,
        });

    });
</script>