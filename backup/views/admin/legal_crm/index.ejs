<%- include('../header2') -%>
<style>
    td, th {
        text-align: center;
    }
</style>
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>crm (اشخاص حقوقی)</h1>
                </div>
            </div>
        </div>
    </section>
    <!-- Main content -->
    <section class="content" style="overflow: scroll;">
        <div class="row">
            <div class="col-12">
                <div class="card"  style="    width: fit-content;">
                    <!-- /.card-header -->
                    <div class="card-body"  style="    width: fit-content;">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>ردیف</th>
                                <th>نام شرکت </th>
                                <th>شناسه ملی شرکت</th>
                                <th>نام و نام خانوادگی رابط</th>
                                <th>سمت سازمانی رابط</th>
                                <th>شماره همراه رابط</th>
                                <th>آدرس</th>
                                <th>ایمیل</th>
                                <th>فکس</th>
                                <th>عنوان درخواست</th>
                                <th>شماره سریال محصول</th>
                                <th>ولتاژ</th>
                                <th>توان</th>
                                <th>موضوع درخواست</th>
                                <th>خدمات فروش از</th>
                                <th>خدمات پس از فروش از</th>
                                <th>نوع محصول</th>
                                <th>شرح درخواست</th>
                                <th>تاریخ ایجاد</th>
                                <th>عملیات</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if(data){ %>
                                <% let num = 1 %>
                                <% for (let i in data){ %>
                                    <tr id="tr_<%= data[i].data._id %>">
                                        <td><%= num %></td>
                                        <td><%= data[i].data.companyName %></td>
                                        <td><%= data[i].data.company_national_number %></td>
                                        <td><%= data[i].data.refer_name %></td>
                                        <td><%= data[i].data.jobTitle %></td>
                                        <td><%= data[i].data.refer_mobile %></td>
                                        <td><%= data[i].data.address %></td>
                                        <td><%= data[i].data.email %></td>
                                        <td><%= data[i].data.fax %></td>
                                        <td><%= data[i].request_tile %></td>
                                        <td><%= data[i].data.product_serial_number %></td>
                                        <td><%= data[i].data.volt %></td>
                                        <td><%= data[i].data.tavan %></td>
                                        <td><%= data[i].request_type %></td>
                                        <td><%= data[i].forosh %></td>
                                        <td><%= data[i].pas_az_forosh %></td>
                                        <td><%= data[i].product_type %></td>
                                        <td><%= data[i].data.request %></td>
                                        <td><%= data[i].cr %></td>
                                        <td>
                                            <a href="#" onclick="delete_('<%= data[i].data._id %>')">
                                                <i class="fa fa-trash" title="حذف"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% num++ %>
                                <% } %>
                            <% } %>
                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
