<%- include('../header3')-%>
<script src="admin/dist/js/ckeditor.js"></script>
<script src="admin/dist/js/jquery-3.5.1.min.js"></script>
<style>
    .ck-editor__editable_inline{
        direction: rtl !important;
        text-align: right !important;
    }
</style>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>ویرایش مزایده</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <%if(s){%>
                    <div class="alert alert-success">
                        با موفقیت ویرایش شد
                    </div>
                    <%}%>
                    <div class="card card-primary">
                        <div class="card-header">
                            <!--                            <h3 class="card-title">مثال ساده</h3>-->
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form role="form" method="post" enctype="multipart/form-data" action="/admin/mzyd/edit_<%=d._id%>">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="news_title">عنوان </label>
                                    <input type="text" value="<%=d.title%>" class="form-control" id="news_title" name="title" >
                                </div>
                                <div class="form-group">
                                    <label for="img">تصویر مزایده</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="img" name="img">
                                            <label class="custom-file-label" for="img">انتخاب فایل</label>
                                        </div>
                                    </div>

                                    <img src="<%=uRoute%>/<%=d.img%>" width="80" height="80" alt="">
                                    <br>
                                </div>
                                <div class="form-group">
                                    <label for="file">فایل پی دی اف</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="file" name="file">
                                            <label class="custom-file-label" for="file">انتخاب فایل</label>
                                        </div>
                                    </div>
                                    <br>
                                </div>
                                <div class="form-group">
                                    <label for="file2"> 2 فایل پی دی اف</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="file2" name="file2">
                                            <label class="custom-file-label" for="file2">انتخاب فایل</label>
                                        </div>
                                    </div>
                                    <br>
                                </div>
                                <div class="form-group">
                                    <label for="file3"> 3 فایل پی دی اف</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="file3" name="file3">
                                            <label class="custom-file-label" for="file3">انتخاب فایل</label>
                                        </div>
                                    </div>
                                    <br>
                                </div>
                                <div class="form-group">
                                    <label for="file4"> 4 فایل پی دی اف</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="file4" name="file4">
                                            <label class="custom-file-label" for="file4">انتخاب فایل</label>
                                        </div>
                                    </div>
                                    <br>
                                </div>
                                <div class="form-group">
                                    <label for="description">توضیحات</label>
                                    <textarea name="description" id="editor">
<%-d.description%>
                                            </textarea>
                                </div>
								<div class="form-group">
                                    <label for="news_title">تاریخ </label>
                                    <input type="text" value="<%=date%>" class="form-control" id="news_title" name="to_date" placeholder="1399/01/01">
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">ارسال</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->

                    <!-- Form Element sizes -->

                </div>
                <!--/.col (left) -->
                <!-- right column -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<script>
    ClassicEditor.defaultConfig = {
        toolbar: {
            items: [
                'heading',
                '|',
                'bold',
                'italic',
                '|',
                'bulletedList',
                'numberedList',

            ]
        },
        image: {
            toolbar: [
                'imageStyle:full',
                'imageStyle:side',
                '|',
                'imageTextAlternative'
            ]
        },
        table: {
            contentToolbar: [ 'tableColumn', 'tableRow', 'mergeTableCells' ]
        },
        language: 'en'
    };
    ClassicEditor
        .create( document.querySelector( '#editor' ) )
        .catch( error => {
            console.error( error );
        } );
    ClassicEditor.on( 'dialogDefinition', function( ev )
    {
        // Take the dialog name and its definition from the event
        // data.
        var dialogName = ev.data.name;
        var dialogDefinition = ev.data.definition;

        // Check if the definition is from the dialog we're
        // interested on (the Link and Image dialog).
        if ( dialogName == 'link' || dialogName == 'image' )
        {
            // remove Upload tab
            dialogDefinition.removeContents( 'Upload' );
        }
    });

</script>

