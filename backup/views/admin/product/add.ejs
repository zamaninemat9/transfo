<%- include('../header3')-%>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>افزودن محصول</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    
                    <div class="card card-primary">
                        <div class="card-header">
                        </div>
                        <!-- <form role="form" enctype="multipart/form-data" method="post" action="/admin/product/add" > -->
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="title">عنوان محصول</label>
                                    <input type="text" class="form-control" id="title" name="title" placeholder="عنوان شرکت  را وارد کنید">
                                </div>
                                <div class="form-group">
                                    <label for="site">لینک ارجاع</label>
                                    <input type="text" class="form-control" id="link" name="link" placeholder="لینک محصول را وارد کنید">
                                </div>
                                <div class="form-group">
                                    <label for="parent">دسته والد</label>
                                    <select id="parent" class="form-control" name="parent">
                                    <option value="1">قدرت و فوق قدرت</option>
                                    <option value="2">توزیع و فوق توزیع</option>
                                    <option value="3">خشک رزینی</option>
                                    <option value="4"> ویژه</option>
                                    <option value="5">تجهیزات و مواد</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="img1">تصویر محصول</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="img1" name="img1">
                                            <label class="custom-file-label" for="img1">انتخاب فایل</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="img2">تصویر دوم محصول</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="img2" name="img2">
                                            <label class="custom-file-label" for="img2">انتخاب فایل</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="img3">تصویر سوم محصول</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="img3" name="img3">
                                            <label class="custom-file-label" for="img3">انتخاب فایل</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="img3">تصویر چهارم محصول</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="img4" name="img4">
                                            <label class="custom-file-label" for="img4">انتخاب فایل</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="description1">توضیحات اول</label>
                                     <div name="description1" id="description1"></div>
                                </div>
                                <div class="form-group">
                                    <label for="description2">توضیحات دوم</label>
                                    <div name="description2"  id="description2"></div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button id="submit" class="btn btn-primary">ارسال</button>
                            </div>
                        <!-- </form> -->
                    </div>
                </div>
              
            </div>
        </div>
    </section>
</div>

<script>
  //title
// link
// parent
// img1
// img2
// img3
// img4
// description1
// description2
    var fullEditor1 = new Quill('#description1', {
          bounds: '#description1',
          modules: {
            'syntax': true,
            'toolbar': [
              [ 'bold', 'italic', 'underline', 'strike' ],
              [{ 'color': [] }, { 'background': [] }],
              [{ 'script': 'super' }, { 'script': 'sub' }],
              [{ 'header': '1' }, { 'header': '2' }, 'blockquote', 'code-block' ],
              [{ 'list': 'ordered' }, { 'list': 'bullet'}, { 'indent': '-1' }, { 'indent': '+1' }],
              [ {'direction': 'rtl'}, { 'align': [] }],
              [ 'link', 'image', 'formula' ],
              //[ 'link', 'image', 'video', 'formula' ],
              [ 'clean' ]
            ],
          },
          theme: 'snow'
        });
        var fullEditor2 = new Quill('#description2', {
          bounds: '#description2',
          modules: {
            'syntax': true,
            'toolbar': [
              [ 'bold', 'italic', 'underline', 'strike' ],
              [{ 'color': [] }, { 'background': [] }],
              [{ 'script': 'super' }, { 'script': 'sub' }],
              [{ 'header': '1' }, { 'header': '2' }, 'blockquote', 'code-block' ],
              [{ 'list': 'ordered' }, { 'list': 'bullet'}, { 'indent': '-1' }, { 'indent': '+1' }],
              [ {'direction': 'rtl'}, { 'align': [] }],
              [ 'link', 'image', 'formula' ],
              //[ 'link', 'image', 'video', 'formula' ],
              [ 'clean' ]
            ],
          },
          theme: 'snow'
        });
 $("#submit").click(()=>{
 
         let formData = new FormData();
         //title
         if (!$("#title").val()) {
             warn.iconClass = "toast-warning";
             return toastr.error('عنوان نمیتواند خالی بماند ', 'خطا', warn)
         }
         formData.append("title", $("#title").val());
         //link
         if (!$("#link").val()) {
             warn.iconClass = "toast-warning";
             return toastr.error('لینک نمیتواند خالی بماند ', 'خطا', warn)
         }
         formData.append("link", $("#link").val());
         //parent
         if (!$("#parent").val()) {
             warn.iconClass = "toast-warning";
             return toastr.error('والد نمیتواند خالی بماند ', 'خطا', warn)
         }
         formData.append("parent", $("#parent").val());
         //img1
         let img1 = document.querySelector('#img1');
         if(!img1.files[0]){
             warn.iconClass = "toast-warning";
             return toastr.error('تصویر اول نمیتواند خالی بماند', 'خطا', warn)
         }
         formData.append("img1", img1.files[0]);
         //img2
         let img2 = document.querySelector('#img2');
         if(!img2.files[0]){
             warn.iconClass = "toast-warning";
             return toastr.error('تصویر دوم نمیتواند خالی بماند', 'خطا', warn)
         }
         formData.append("img2", img2.files[0]);
         //img3
         let img3 = document.querySelector('#img3');
         if(!img3.files[0]){
             warn.iconClass = "toast-warning";
             return toastr.error('تصویر سوم نمیتواند خالی بماند', 'خطا', warn)
         }
         formData.append("img3", img3.files[0]);
         //img4
         let img4 = document.querySelector('#img4');
         if(!img4.files[0]){
             warn.iconClass = "toast-warning";
             return toastr.error('تصویر چهارم نمیتواند خالی بماند', 'خطا', warn)
         }
         formData.append("img4", img4.files[0]);
         //description1
         let description1=fullEditor1.root.innerHTML;
         if(description1=='<p><br></p>'||!description1){
             warn.iconClass = "toast-warning";
             return toastr.error('توضیحات اول نمیتواند خالی بماند', 'خطا', warn)
         }
         formData.append("description1", description1);
       //description2
       let description2=fullEditor2.root.innerHTML;
         if(description2=='<p><br></p>'||!description2){
             warn.iconClass = "toast-warning";
             return toastr.error('توضیحات دوم نمیتواند خالی بماند', 'خطا', warn)
         }
         formData.append("description2", description2);
 
      axios.post('<%=uRoute%>/admin/product/add', formData, {
         headers: {
         'Content-Type': 'multipart/form-data'
      }
         }) 
         .then(r=>{
             if(r.data.status==200){
                 warn.iconClass = "toast-success";
                  toastr.error('عملیات با موفقیت انجام شد', '', warn)
                  setTimeout(()=>{
                     window.location.href='<%=uRoute%>/admin/product'
                  },2000)
                  
             }else if(r.data.status==403){
                 window.location.href='<%=uRoute%>/admin/login'
             }else{
                 warn.iconClass = "toast-warning";
                 return toastr.error(r.data.data, 'خطا', warn)  
             }
         })
         .catch(()=>{
             warn.iconClass = "toast-error";
                 return toastr.error('خطا در برقراری ارتباط با سرور', 'خطا', warn)
         })
 });
 
 </script>

