<%- include('../header3')-%>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>افزودن اسلایدر</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <%if(d){%>
                    <div class="alert alert-success">
                        با موفقیت افزوده شد
                    </div>
                    <%}%>
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
<!--                            <h3 class="card-title">مثال ساده</h3>-->
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form role="form" enctype="multipart/form-data" method="post" action="/admin/slider/add" >
                            <div class="card-body">
                                <div class="form-group">
                                    <label>نوع اسلایدر</label>
                                    <br>
                                    <label for="slider_ck1">تصویر</label>
                                    <input type="radio" checked id="slider_ck1" class="my_cks" name="is_video" value="0">
                                    <label for="slider_ck2">ویدئو</label>
                                    <input type="radio" id="slider_ck2"  class="my_cks" name="is_video" value="1">
                                </div>
                                <div class="form-group">
                                    <label for="img">تصویر </label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file"  class="custom-file-input" id="img" name="img">
                                            <label class="custom-file-label" for="img">انتخاب فایل</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="video">ویدئو</label>
                                    <input type="text" disabled="true" name="video" id="video" placeholder="http://aparat.com/mylink_video.mp4" class="form-control">
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">ارسال</button>
                            </div>
                        </form>
                    </div>

                    <!-- Form Element sizes -->

                </div>
                <!--/.col (left) -->
                <!-- right column -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script>
    $(".my_cks").change(()=>{
        let slc=$('input[name="is_video"]:checked').val();
        if(slc=='1'){
            $("#video").prop('disabled',false)
            $("#img").prop('disabled',true)
        }else{
            $("#video").prop('disabled',true)
            $("#img").prop('disabled',false)
        }
    })
</script>
<%- include('../footer3')-%>
