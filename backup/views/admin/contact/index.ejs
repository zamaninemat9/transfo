<%- include('../header2') -%>
<style>
    td, th {
        text-align: center;
    }
</style>
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>فرم تماس با ما</h1>
                </div>
            </div>
        </div>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>ردیف</th>
                                <th>نام</th>
                                <th>ایمیل</th>
                                <th>پیام</th>
                                <th>تاریخ ایجاد</th>
                                <th>عملیات</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if(data){ %>
                                <% let num = 1 %>
                                <% for (let i in data){ %>
                                    <tr id="tr_<%= data[i].data._id %>">
                                        <td><%= num %></td>
                                        <td><%= data[i].data.name %></td>
                                        <td><%= data[i].data.email %></td>
                                        <td><%= data[i].data.text %></td>
                                        <td><%= data[i].cr %></td>
                                        <td>
                                            <a href="#" onclick="delete_('<%= data[i].data._id %>')">
                                                <i class="fa fa-trash" title="حذف"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% num++ %>
                                <% } %>
                            <% } %>
                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.0/axios.min.js"></script>
<%- include('../footer2') -%>
<script>
    $(function () {
        $("#example1").DataTable({
            "language": {
                "paginate": {
                    "next": "بعدی",
                    "previous": "قبلی"
                },
                search: "جستجو : ",
            },
            "info": false,
			dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
        });

    });
</script>
<script>
    function delete_(id) {
        axios.delete('/admin/contact/remove/' + id)
            .then(r => {
                if (r.data.issuccessful) {
                    $("#tr_" + id).remove();
                }
            });
    }
</script>
