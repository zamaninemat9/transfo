<%- include('../header2') -%>
<style>
    td, th {
        text-align: center;
    }
</style>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>همکاری با ما</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card" style="overflow: scroll !important;">
                    <div class="card-header">
                        <h3 class="card-title">
                            <!--<a href="/admin/gallery/add" class="btn btn-primary">افزودن تصویر</a>-->
                        </h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>ردیف</th>
                                <th>نام شركت - كارگاه</th>
                                <th>تلفن و نمابر</th>
                                <th>آدرس سايت اينترنتي</th>
                                <th>كد اقتصادي</th>
                                <th>وضعيت حقوقي</th>
                                <th>عنوان وضعیت حقوقی</th>
                                <th>نحوه تامين</th>
                                <th>نشاني شركت / كارگاه</th>
                                <th>اهم زمينه هاي فعاليت شركت</th>
                                <th>اهم سوابق كاري</th>
                                <th>سمت</th>
                                <th>نام و نام خانوادگی</th>
                                <th>شماره تماس</th>
                                <th>تاریخ</th>
                                <th>عملیات</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if(data){ %>
                                <%let num=1%>
                            <% for (let i in data){ %>
                            <tr id="tr_<%= data[i].data._id %>">
                                <td><%=num%></td>
                                <td><%=data[i].data.name%></td>
                                <td><%=data[i].data.mobile%></td>
                                <td><%=data[i].data.site%></td>
                                <td><%=data[i].data.egh_code%></td>
                                <td><%=data[i].ho%></td>
                                <td><%=data[i].data.ho_say%></td>
                                <td><%=data[i].nhv%></td>
                                <td><%=data[i].data.z_neshany%></td>
                                <td><%=data[i].data.z_faaliyat%></td>
                                <td><%=data[i].data.z_sesal%></td>
                                <td><%=data[i].data.z_fullname%></td>
                                <td><%=data[i].data.z_semat%></td>
                                <td><%=data[i].data.z_tamas%></td>
                                <td><%=data[i].cr%></td>
                                <td>
                                    <a href="#" onclick="delete_id('<%= data[i].data._id %>')">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                                    <%num++%>
                            <% } %>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

<script src="admin/axios.min.js"></script>

<%- include('../footer2') -%>
<script>
    $(function () {
        $("#example1").DataTable({
            "language": {
                "paginate": {
                    "next": "بعدی",
                    "previous": "قبلی"
                },
                search: "جستجو : ",
            },
            "info": false,
			dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
        });

    });
</script>
<script>
    function delete_id(id) {
        axios.delete('/admin/coop/remove/' + id)
            .then(r => {
                if(r.data.issuccessful){
                    $("#tr_"+id).remove();
                }
            });
    }
</script>